<Window
    x:Class="WpfDemoApp.DemoWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfDemoApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:WpfDemoApp.Views"
    xmlns:vm="clr-namespace:WpfDemoApp.ViewModels"
    Title="MainWindow"
    Width="800"
    Height="800"
    d:DataContext="{d:DesignInstance Type=vm:DemoWindowViewModel,
                                     IsDesignTimeCreatable=True}"
    mc:Ignorable="d">

    <Window.DataContext>
        <vm:DemoWindowViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border
            Grid.Column="0"
            Padding="10"
            BorderBrush="LightGray"
            BorderThickness="0,0,1,0">
            <views:ScaleBarSettingsControl DataContext="{Binding GlobalScaleSettingsViewModel}" />
        </Border>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Button
                Margin="5"
                Command="{Binding LoadImageOneCommand}"
                Content="加载图像 1" />
            <views:ImageDisplayControl
                Grid.Row="1"
                DataContext="{Binding DisplayOneViewModel}"
                ImageSource="{Binding ImageSource, RelativeSource={RelativeSource AncestorType=Window}}"
                ScaleSettings="{Binding GlobalScaleSettingsViewModel}" />
        </Grid>

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Button
                Margin="5"
                Command="{Binding LoadImageTwoCommand}"
                Content="加载图像 2" />
            <views:ImageDisplayControl
                Grid.Row="1"
                DataContext="{Binding DisplayTwoViewModel}"
                ImageSource="{Binding ImageSource, RelativeSource={RelativeSource AncestorType=Window}}"
                ScaleSettings="{Binding GlobalScaleSettingsViewModel}" />
        </Grid>
    </Grid>
</Window>
