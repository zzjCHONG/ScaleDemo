<UserControl
    x:Class="WpfDemoApp.Views.ImageDisplayControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfDemoApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:scalebar="clr-namespace:WpfCustomControlLibrary1;assembly=WpfCustomControlLibrary1"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <scalebar:ScaleBarEx
            Background="LightGray"
            BackgroundBrush="{Binding ScaleSettings.BackgroundBrush, ElementName=ThisImageDisplayControl}"
            DrawMode="{Binding ScaleSettings.DrawMode, ElementName=ThisImageDisplayControl}"
            FontFamily="{Binding ScaleSettings.FontFamily, ElementName=ThisImageDisplayControl}"
            FontSize="{Binding ScaleSettings.FontSize, ElementName=ThisImageDisplayControl}"
            FontVisibility="{Binding ScaleSettings.FontVisibility, ElementName=ThisImageDisplayControl}"
            FontWeight="{Binding ScaleSettings.FontWeight, ElementName=ThisImageDisplayControl}"
            HeightinUnit="{Binding ScaleSettings.HeightinUnit, ElementName=ThisImageDisplayControl}"
            ImageSource="{Binding ImageSource, ElementName=ThisImageDisplayControl}"
            IsScaleBarVisible="{Binding ScaleSettings.IsScaleBarVisible, ElementName=ThisImageDisplayControl}"
            IsSetScaleMode="{Binding ScaleSettings.IsSetScaleMode, ElementName=ThisImageDisplayControl}"
            LineWidth="{Binding ScaleSettings.LineWidth, ElementName=ThisImageDisplayControl}"
            PixelAspectRatio="{Binding ScaleSettings.PixelAspectRatio, ElementName=ThisImageDisplayControl}"
            Position="{Binding ScaleSettings.Position, ElementName=ThisImageDisplayControl}"
            Scale="{Binding ScaleSettings.Scale, ElementName=ThisImageDisplayControl}"
            ScaleLengthHeight="{Binding ScaleSettings.ScaleLengthHeight, ElementName=ThisImageDisplayControl}"
            ScaleLengthWidth="{Binding ScaleSettings.ScaleLengthWidth, ElementName=ThisImageDisplayControl}"
            TextBrush="{Binding ScaleSettings.TextBrush, ElementName=ThisImageDisplayControl}"
            Unit="{Binding ScaleSettings.Unit, ElementName=ThisImageDisplayControl}"
            WidthinUnit="{Binding ScaleSettings.WidthinUnit, ElementName=ThisImageDisplayControl}" />
    </Grid>
</UserControl>
