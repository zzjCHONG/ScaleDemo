<Window
    x:Class="ScaleBarMvvm.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ScaleBarMvvm"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ScaleBarMvvm"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  图像显示区域  -->
        <controls:ScaleBarUserControl
            x:Name="ScaleBarControl"
            Grid.Column="0"
            Margin="5"
            ImageSource="{Binding CurrentImage}" />

        <!--  设置面板  -->
        <controls:ScaleBarSettingsControl
            Grid.Column="1"
            Margin="5"
            ViewModel="{Binding ElementName=ScaleBarControl, Path=ViewModel}" />
    </Grid>

</Window>
