<UserControl
    x:Class="ScaleBarIndependent.ScaleBarUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ScaleBarIndependent"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Image Source="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:ScaleBarUserControl}}, Path=ImageSource}" />
    </Grid>
</UserControl>
