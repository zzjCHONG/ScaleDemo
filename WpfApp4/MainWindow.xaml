<Window
    x:Class="WpfApp4.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp4"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Image Name="MainImage" Stretch="Uniform" />
        <Canvas
            Name="OverlayCanvas"
            Background="Transparent"
            IsHitTestVisible="False" />
        <StackPanel
            Margin="10"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Orientation="Horizontal">
            <Button Margin="5" Click="DrawRuler_Click">画标尺</Button>
            <Button Margin="5" Click="SaveCombinedImage_Click">保存合成图片</Button>
            <Button Margin="5" Click="SaveOverlayData_Click">保存Overlay数据</Button>
            <Button Margin="5" Click="LoadOverlayData_Click">加载Overlay数据</Button>
        </StackPanel>
    </Grid>
</Window>
