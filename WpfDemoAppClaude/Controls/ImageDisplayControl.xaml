<UserControl
    x:Class="WpfDemoAppClaude.Controls.ImageDisplayControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfDemoAppClaude.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:scalebar="clr-namespace:WpfCustomControlLibrary1;assembly=WpfCustomControlLibrary1"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Border
        BorderBrush="Gray"
        BorderThickness="1"
        CornerRadius="5">
        <scalebar:ScaleBarEx
            x:Name="ScaleBarControl"
            Background="{Binding Background, RelativeSource={RelativeSource AncestorType=UserControl}}"
            BackgroundBrush="{Binding BackgroundBrush, RelativeSource={RelativeSource AncestorType=UserControl}}"
            DrawMode="{Binding DrawMode, RelativeSource={RelativeSource AncestorType=UserControl}}"
            FontFamily="{Binding FontFamily, RelativeSource={RelativeSource AncestorType=UserControl}}"
            FontSize="{Binding FontSize, RelativeSource={RelativeSource AncestorType=UserControl}}"
            FontVisibility="{Binding FontVisibility, RelativeSource={RelativeSource AncestorType=UserControl}}"
            FontWeight="{Binding FontWeight, RelativeSource={RelativeSource AncestorType=UserControl}}"
            HeightinUnit="{Binding HeightinUnit, RelativeSource={RelativeSource AncestorType=UserControl}}"
            ImageSource="{Binding ImageSource, RelativeSource={RelativeSource AncestorType=UserControl}}"
            IsScaleBarVisible="{Binding IsScaleBarVisible, RelativeSource={RelativeSource AncestorType=UserControl}}"
            IsSetScaleMode="{Binding IsSetScaleMode, RelativeSource={RelativeSource AncestorType=UserControl}}"
            LineWidth="{Binding LineWidth, RelativeSource={RelativeSource AncestorType=UserControl}}"
            MaxScale="{Binding MaxScale, RelativeSource={RelativeSource AncestorType=UserControl}}"
            MinScale="{Binding MinScale, RelativeSource={RelativeSource AncestorType=UserControl}}"
            PanSensitivity="{Binding PanSensitivity, RelativeSource={RelativeSource AncestorType=UserControl}}"
            PixelAspectRatio="{Binding PixelAspectRatio, RelativeSource={RelativeSource AncestorType=UserControl}}"
            Position="{Binding Position, RelativeSource={RelativeSource AncestorType=UserControl}}"
            Scale="{Binding Scale, RelativeSource={RelativeSource AncestorType=UserControl}}"
            ScaleLengthHeight="{Binding ScaleLengthHeight, RelativeSource={RelativeSource AncestorType=UserControl}}"
            ScaleLengthWidth="{Binding ScaleLengthWidth, RelativeSource={RelativeSource AncestorType=UserControl}}"
            TextBrush="{Binding TextBrush, RelativeSource={RelativeSource AncestorType=UserControl}}"
            Unit="{Binding Unit, RelativeSource={RelativeSource AncestorType=UserControl}}"
            WidthinUnit="{Binding WidthinUnit, RelativeSource={RelativeSource AncestorType=UserControl}}" />
    </Border>
</UserControl>
