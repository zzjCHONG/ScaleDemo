<Window
    x:Class="ScaleBarIndependent.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ScaleBarIndependent"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ScaleBarIndependent"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance local:MainWindowViewModel}"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <controls:ScaleBarUserControl
            Grid.Column="0"
            Margin="5"
            GlobalSettingsViewModel="{Binding DataContext.GlobalSettings, RelativeSource={RelativeSource AncestorType=Window}}"
            ImageSource="{Binding DataContext.CurrentImage, RelativeSource={RelativeSource AncestorType=Window}}" />

        <controls:ScaleBarUserControl
            Grid.Column="1"
            Margin="5"
            GlobalSettingsViewModel="{Binding DataContext.GlobalSettings, RelativeSource={RelativeSource AncestorType=Window}}"
            ImageSource="{Binding DataContext.CurrentImage, RelativeSource={RelativeSource AncestorType=Window}}" />

        <controls:ScaleBarSettingsControl
            Grid.Column="2"
            Margin="5"
            GlobalSettingsViewModel="{Binding DataContext.GlobalSettings, RelativeSource={RelativeSource AncestorType=Window}}" />
    </Grid>
</Window>
