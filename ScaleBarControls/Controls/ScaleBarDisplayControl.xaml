<UserControl
    x:Class="ScaleBarControls.Controls.ScaleBarDisplayControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:ScaleBarControls.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ScaleBarControls.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:scalebar="clr-namespace:WpfCustomControlLibrary1;assembly=WpfCustomControlLibrary1"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converters:BoolToThicknessConverter x:Key="BoolToThicknessConverter" />
    </UserControl.Resources>

    <Border
        Background="{Binding DisplayBackground, RelativeSource={RelativeSource AncestorType=local:ScaleBarDisplayControl}}"
        BorderBrush="Gray"
        BorderThickness="{Binding ShowBorder, RelativeSource={RelativeSource AncestorType=local:ScaleBarDisplayControl}, Converter={StaticResource BoolToThicknessConverter}}">

        <scalebar:ScaleBarEx
            x:Name="scaleBarEx"
            BackgroundBrush="{Binding BackgroundBrush}"
            DrawMode="{Binding DrawMode}"
            FontFamily="{Binding FontFamily}"
            FontSize="{Binding FontSize}"
            FontVisibility="{Binding FontVisibility}"
            FontWeight="{Binding FontWeight}"
            HeightinUnit="{Binding HeightinUnit}"
            ImagePanelScale="{Binding ImagePanelScale, Mode=TwoWay}"
            ImageSource="{Binding ImageSource}"
            IsScaleBarVisible="{Binding IsScaleBarVisible}"
            IsSetScaleMode="{Binding IsSetScaleMode}"
            LineWidth="{Binding LineWidth}"
            MaxScale="{Binding MaxScale}"
            MinScale="{Binding MinScale}"
            PanSensitivity="{Binding PanSensitivity}"
            PixelAspectRatio="{Binding PixelAspectRatio}"
            Position="{Binding Position}"
            Scale="{Binding Scale}"
            ScaleLengthHeight="{Binding ScaleLengthHeight}"
            ScaleLengthWidth="{Binding ScaleLengthWidth}"
            TextBrush="{Binding TextBrush}"
            Unit="{Binding Unit}"
            WidthinUnit="{Binding WidthinUnit}" />
    </Border>
</UserControl>
