<Window
    x:Class="ScaleBarControlsApplyDemo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ScaleBarControls.Controls;assembly=ScaleBarControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ScaleBarControlsApplyDemo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="MinHeight" Value="30" />
        </Style>
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="5" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  顶部工具栏  -->
        <Border
            Grid.Row="0"
            Background="#F0F0F0"
            BorderBrush="Gray"
            BorderThickness="0,0,0,1">
            <StackPanel Margin="10,5" Orientation="Horizontal">
                <Button Click="LoadImageButton_Click" Content="加载图片" />
                <Button Click="ResetViewButton_Click" Content="重置视图" />
                <Button Click="CaptureButton_Click" Content="截图保存" />
                <Separator Margin="10,0" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                <Button Click="AboutButton_Click" Content="关于" />
            </StackPanel>
        </Border>

        <!--  主要内容区域  -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="350" />
            </Grid.ColumnDefinitions>

            <!--  左侧显示区域  -->
            <Grid Grid.Column="0" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  第一个显示控件  -->
                <GroupBox Grid.Row="0" Header="显示区域 1 - 主显示">
                    <controls:ScaleBarDisplayControl
                        x:Name="displayControl1"
                        DisplayBackground="DarkSlateGray"
                        ShowBorder="True" />
                </GroupBox>

                <!--  第二个显示控件  -->
                <GroupBox Grid.Row="1" Header="显示区域 2 - 同步显示">
                    <controls:ScaleBarDisplayControl
                        x:Name="displayControl2"
                        DisplayBackground="DarkBlue"
                        ShowBorder="True" />
                </GroupBox>
            </Grid>

            <!--  右侧设置面板  -->
            <Grid Grid.Column="1">
                <GroupBox Header="比例尺设置面板">
                    <controls:ScaleBarSettingsControl x:Name="settingsControl" />
                </GroupBox>
            </Grid>
        </Grid>

        <!--  底部状态栏  -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Text="{Binding SharedViewModel.IsImageLoaded, StringFormat='图片状态: {0}'}" />
            </StatusBarItem>
            <Separator />
            <StatusBarItem>
                <TextBlock Text="{Binding SharedViewModel.ImagePanelScale, StringFormat='缩放比例: {0:F2}'}" />
            </StatusBarItem>
            <Separator />
            <StatusBarItem>
                <TextBlock Text="{Binding SharedViewModel.IsScaleBarVisible, StringFormat='比例尺显示: {0}'}" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
